# rails/sinatra app
upstream <%= @app_name %> {
  server unix:/tmp/<%= @app_name %>.sock;
}
server {
  listen 80;
  server_name local.<%= @app_name %>.com;
  location / {
    root /var/www/html/<%= @app_name %>/public;
    proxy_pass http://<%= @app_name %>;
    proxy_set_header Host $host;
  }
  location ~^/assets/ {
		root /var/www/html/<%= @app_name %>/public;
	}
  location ~^/images/ {
		root /var/www/html/<%= @app_name %>/public;
	}
  location ~^/css/ {
		root /var/www/html/<%= @app_name %>/public;
	}
  location ~^/js/ {
		root /var/www/html/<%= @app_name %>/public;
	}
}
